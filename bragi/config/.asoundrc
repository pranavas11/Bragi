pcm.splitter {
    type plug
    slave.pcm {
        type multi
        slaves {
            a { pcm "hw:HDMI,3" channels 2 }
            b { pcm "hw:Loopback,0,0" channels 2 }
        }
        bindings [
            { slave a channel 0 }
            { slave a channel 1 }
            { slave b channel 0 }
            { slave b channel 1 }
        ]
    }
    ttable [
        [ 1 0 1 0 ]
        [ 0 1 0 1 ]
    ]
}

pcm.!default {
    type plug
    slave.pcm "splitter"
}
